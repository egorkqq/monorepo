{
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "trailingComma": "all",
  "semi": true,
  "singleQuote": false,
  "printWidth": 120,

  "importOrder": [
    "^react(.*)$",
    "^(|@arc|/)?(.*)$",

    "<THIRD_PARTY_MODULES>",

    "^\\bconstants\\b(.*)$",

    "^\\bassets\\b(.*)$",
    "^\\bhooks\\b(.*)$",

    "^\\bcontexts\\b(.*)$",
    "^\\bwidgets\\b(.*)$",
    "^\\butils\\b(.*)$",

    "^\\bcomponents\\b(.*)$",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,

  "tailwindFunctions": ["cn"]
}
